# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/paper_analyzer

# AI Service Configuration
AI_PROVIDER=gemini  # Options: gemini, openai, anthropic

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_THINKING_BUDGET=20000
GEMINI_TIMEOUT=120

# OpenAI API Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic API Configuration (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7

# Hot Topics Analysis Settings
HOT_TOPICS_ANALYSIS_DAYS=30
HOT_TOPICS_MIN_PAPERS=5
HOT_TOPICS_MAX_TOPICS=10
HOT_TOPICS_TIMEOUT=180

# Summary Settings
SUMMARY_MAX_LENGTH=500
SUMMARY_LANGUAGE=auto